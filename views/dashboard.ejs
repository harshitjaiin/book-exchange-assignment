<% include('layout') %>
<h1>Welcome, <%= user.username %></h1>
<a href="/books/add" class="btn btn-success">Add a New Book</a>
<a href="/books/match" class="btn btn-primary">Find Matches</a>

<h2>Your Books</h2>
<% if(user.books.length > 0) { %>
    <ul class="list-group">
        <% user.books.forEach(function(book) { %>
            <li class="list-group-item">
                <%= book.title %> by <%= book.author %>
                <a href="/books/edit/<%= book._id %>" class="btn btn-warning btn-sm">Edit</a>
                <form action="/books/delete/<%= book._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
<% } else { %>
    <p>You have not listed any books yet.</p>
<% } %>
